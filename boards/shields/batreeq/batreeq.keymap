        };
        function {
            label = "FUN";
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
            bindings = <
                &none          &bootloader    &trans         &trans         &trans         &kp F12        &kp F7         &kp F8         &kp F9         &none 
